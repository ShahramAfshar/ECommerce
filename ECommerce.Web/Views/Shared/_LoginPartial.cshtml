@using Microsoft.AspNet.Identity
<ul>
    @if (Request.IsAuthenticated)
    {

        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()


            <li>
                @Html.ActionLink("خوش آمدید " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a class="text-warning" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            if (User.IsInRole("Admin"))
            {
                <li>
                    @Html.ActionLink("پنل ادمین", "Index", "Home", new { Area = "Admin" })
                </li>
            }

        }

    }
    else
    {

        <li>@Html.ActionLink("ثبت نام", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("ورود", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>

    }
</ul>