@using Microsoft.AspNet.Identity
    <ul>
        @if (Request.IsAuthenticated)
        {

            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()

                <li><a href="/Manage/Index"><i class="fa fa-user-plus"></i> <label> @User.Identity.GetUserName()خوش آمدید</label> </a></li>

                <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-user-plus"></i> <label>خروج</label></a></li>
                if (User.IsInRole("Admin"))
                {

                    <li><a href="/Admin/Home"><i class="fa fa-user-plus"></i> <label> پنل ادمین</label> </a></li>

                }

            }



        }
        else
        {

            <li><a href="/Account/Register" id ="registerLink" ><i class="fa fa-user-plus"></i> <label>عضویت</label> </a></li>
            <li><a href="/Account/Login" id = "loginLink"><i class="fa fa-user"></i> <label>ورود به سایت</label> </a></li>
        }
