@model IEnumerable<ECommerce.DomainModel.Product>

    <div class="owl-carousel latest_category_tabs">
        @foreach (var item in Model)
        {
            <div class="product-thumb">
                <div class="image"><a href="product.html"><img src="/Images/ProductImages/@item.ImageName" alt="@item.ProductTitle" title="@item.ProductTitle" class="img-responsive" /></a></div>
                <div class="caption">
                    <h4><a href="/Products/GetSingleProduct?productId=@item.ProductId">@item.ProductTitle</a></h4>
                    <p class="price"> <span class="price-new">@item.Price تومان</span> <span class="price-old">240000 تومان</span> <span class="saving">-5%</span> </p>
                    <div class="rating"> <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span> </div>
                </div>
                <div class="button-group">
                    <button class="btn-primary" type="button" onClick="AddToCart(@item.ProductId)"><span>افزودن به سبد</span></button>
                    <div class="add-to-links">
                        <button type="button" data-toggle="tooltip" title="افزودن به علاقه مندی" onClick="AddToWish(@item.ProductId)"><i class="fa fa-heart"></i></button>
                        <button type="button" data-toggle="tooltip" title="افزودن به مقایسه" onClick="AddToCompare(@item.ProductId)"><i class="fa fa-exchange"></i></button>
                    </div>
                </div>
            </div>
        }

    </div>
